<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:text="Daniel Gifted K"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nim"
        android:layout_width="match_parent"
        android:text="225150400111029"
        android:layout_height="wrap_content" />

        <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="end"
        android:padding="10dp"
        android:background="#E0E0E0" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            android:layout_row="0"
            android:layout_column="3" />

        <!-- More Number Buttons -->
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:id="@+id/btnSubtract"
            android:text="-"
            android:layout_row="1"
            android:layout_column="3" />

        <!-- More Buttons -->
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:id="@+id/btnMultiply"
            android:text="*"
            android:layout_row="2"
            android:layout_column="3" />

        <!-- Zero and Other Buttons -->
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:id="@+id/btnDivide"
            android:text="/"
            android:layout_row="3"
            android:layout_column="3" />

        <!-- Clear Button -->
        <Button
            android:id="@+id/btnClear"
            android:text="C"
            android:layout_row="3"
            android:layout_column="0" />

        <!-- Equal Button -->
        <Button
            android:id="@+id/btnEquals"
            android:text="="
            android:layout_row="3"
            android:layout_column="2" />
    </GridLayout>
</LinearLayout>